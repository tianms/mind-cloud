<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mind.dao.sys.SysLogRecordDao">

    <sql id="baseColumn">
        id,
        user_name,
        operation,
        method,
        params,
        run_time,
        ip,
        create_time
    </sql>

    <resultMap id="baseResultMap" type="com.mind.model.sys.SysLogRecordModel">
        <id property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="operation" column="operation"/>
        <result property="method" column="method"/>
        <result property="params" column="params"/>
        <result property="runTime" column="run_time"/>
        <result property="ip" column="ip"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectiveWhere">
        <where>
        </where>
    </sql>

    <!-- 根据id获取 -->
    <select id="getById" resultMap="baseResultMap">
        SELECT
            <include refid="baseColumn"/>
        FROM
            sys_log_record
        where id = #{id}
    </select>

    <!-- 获取列表 -->
    <select id="queryList" resultMap="baseResultMap">
        SELECT
            <include refid="baseColumn"/>
        FROM
            sys_log_record
        <include refid="selectiveWhere"/>
    </select>

    <!-- 插入 -->
    <insert id="insert">
        insert into sys_log_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userName != null"> user_name, </if>
            <if test="operation != null"> operation, </if>
            <if test="method != null"> method, </if>
            <if test="params != null"> params, </if>
            <if test="runTime != null"> run_time, </if>
            <if test="ip != null"> ip, </if>
            <if test="createTime != null"> create_time, </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userName != null"> #{userName}, </if>
            <if test="operation != null"> #{operation}, </if>
            <if test="method != null"> #{method}, </if>
            <if test="params != null"> #{params}, </if>
            <if test="runTime != null"> #{runTime}, </if>
            <if test="ip != null"> #{ip}, </if>
            <if test="createTime != null"> #{createTime}, </if>
        </trim>
    </insert>

    <!-- 更新 -->
    <update id="update">
        update shop_melt_colonel_classify
        <set>
            <if test="userName != null"> user_name = #{userName}, </if>
            <if test="operation != null"> operation = #{operation}, </if>
            <if test="method != null"> method = #{method}, </if>
            <if test="params != null"> params = #{params}, </if>
            <if test="runTime != null"> run_time = #{runTime}, </if>
            <if test="ip != null"> ip = #{ip}, </if>
            <if test="createTime != null"> create_time = #{createTime}, </if>
        </set>
        where id = #{id}
    </update>

</mapper>