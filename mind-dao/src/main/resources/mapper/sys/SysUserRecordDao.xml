<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mind.dao.sys.SysUserRecordDao">

    <sql id="baseColumn">
        id,
        user_name,
        pass_word,
        salt,
        email,
        mobile,
        status,
        is_delete,
        create_user_id,
        create_time,
        update_time,
        del_time
    </sql>

    <resultMap id="baseResultMap" type="com.mind.model.sys.SysLogRecordModel">
        <id property="id" column="id"/>
        <result property="user_name" column="userName"/>
        <result property="pass_word" column="passWord"/>
        <result property="salt" column="salt"/>
        <result property="email" column="email"/>
        <result property="mobile" column="mobile"/>
        <result property="status" column="status"/>
        <result property="is_delete" column="isDelete"/>
        <result property="create_user_id" column="createUserId"/>
        <result property="create_time" column="createTime"/>
        <result property="update_time" column="updateTime"/>
        <result property="del_time" column="delTime"/>
    </resultMap>

    <sql id="selectiveWhere">
        <where>
        </where>
    </sql>

    <!-- 根据id获取 -->
    <select id="getById" resultMap="baseResultMap">
        SELECT
            <include refid="baseColumn"/>
        FROM
            sys_user_record
        where id = #{id}
    </select>

    <!-- 获取列表 -->
    <select id="queryList" resultMap="baseResultMap">
        SELECT
            <include refid="baseColumn"/>
        FROM
            sys_user_record
        <include refid="selectiveWhere"/>
    </select>

    <!-- 插入 -->
    <insert id="insert">
        insert into sys_user_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userName != null"> user_name, </if>
            <if test="passWord != null"> pass_word, </if>
            <if test="salt != null"> salt, </if>
            <if test="email != null"> email, </if>
            <if test="mobile != null"> mobile, </if>
            <if test="status != null"> status, </if>
            <if test="isDelete != null"> is_delete, </if>
            <if test="createUserId != null"> create_user_id, </if>
            <if test="createTime != null"> create_time, </if>
            <if test="updateTime != null"> update_time, </if>
            <if test="delTime != null"> del_time, </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userName != null"> #{userName}, </if>
            <if test="passWord != null"> #{passWord}, </if>
            <if test="salt != null"> #{salt}, </if>
            <if test="email != null"> #{email}, </if>
            <if test="mobile != null"> #{mobile}, </if>
            <if test="status != null"> #{status}, </if>
            <if test="isDelete != null"> #{isDelete}, </if>
            <if test="createUserId != null"> #{createUserId}, </if>
            <if test="createTime != null"> now(), </if>
            <if test="updateTime != null"> #{updateTime}, </if>
            <if test="delTime != null"> #{delTime}, </if>
        </trim>
    </insert>

    <!-- 更新 -->
    <update id="update">
        update sys_user_record
        <set>
            <if test="userName != null"> user_name = #{userName}, </if>
            <if test="passWord != null"> pass_word = #{passWord}, </if>
            <if test="salt != null"> salt = #{salt}, </if>
            <if test="email != null"> email = #{email}, </if>
            <if test="mobile != null"> mobile = #{mobile}, </if>
            <if test="status != null"> status = #{status}, </if>
            <if test="isDelete != null"> is_delete = #{isDelete}, </if>
            <if test="createUserId != null"> create_user_id = #{createUserId}, </if>
            <if test="createTime != null"> create_time = #{createTime}, </if>
            <if test="updateTime != null"> update_time = now(), </if>
            <if test="delTime != null"> del_time = #{delTime}, </if>
        </set>
        where id = #{id}
    </update>

    <!--  更新状态为删除状态  -->
    <update id="deleteById" >
        update sys_user_record set is_delete = #{isDelete}, delTime = now() where id = #{id}
    </update>
</mapper>